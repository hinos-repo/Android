<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/v_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="91.7(채널1)"
        android:onClick="test1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/v_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="106.01"
        android:onClick="test2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/v_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="test3"
        android:text="91.7(채널2)"
        app:layout_constraintEnd_toStartOf="@+id/v_btn2"
        app:layout_constraintStart_toEndOf="@+id/v_btn1"
        app:layout_constraintTop_toTopOf="parent" />
